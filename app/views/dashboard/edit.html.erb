
<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Edit <small>Tickets</small>
    </h1>
  </div>
</div>
<%= form_for @ticket, url: dashboard_path(@ticket), html: {method: 'patch', class: "form-horizontal center"} do |f| %>
    <div class="form-group">
      <%= label_tag :title, "Title", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :description, "Description", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_area :description, class: "form-control", rows: "6" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :assignee_id, "Assignee", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%=
           collection_select(:ticket, :assignee_id, @assignees, :id, :full_name, {include_blank: true},
                             html_options = {class: "form-control"}) %>
      </div>
     </div>
    <div class="form-group">
      <%= label_tag :status, "Status", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.select(:status, Ticket::STATUS, { include_blank: true}, class: "form-control" ) %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :priority, "Priority", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.select(:priority, Ticket::PRIORITY,{ include_blank: true}, class: "form-control"  ) %>
      </div>
    </div>
    <div class="text-center actions">
      <%= f.submit class: "btn btn-default btn-primary" %>
    </div>
<%	 end %>




