<%= devise_error_messages! %>
<div class="container">
  <div class="col-lg-12">

<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal center"}) do |f| %>

  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-lg-4"%>
    <div class="col-md-4">
    <%= f.text_field :first_name, class: "form-control" %>
     </div>
  </div>

   <div class="form-group">
     <%= f.label :last_name, class: "control-label col-lg-4" %>
     <div class="col-md-4">
     <%= f.text_field :last_name, class: "form-control" %>
     </div>
   </div>
    <div class="form-group">
        <%= f.label :company_name, class: "control-label col-lg-4" %>
     <div class="col-md-4">
        <%= f.text_field :company_name, class: "form-control" %>
     </div>
    </div>

    <div class="form-group">
        <%= f.label :email, class: "control-label col-lg-4" %>
    <div class="col-md-4">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-lg-4" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-md-4">
    <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label col-lg-4" %>
    <div class="col-md-4">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit "Sign up", class: "btn btn-default btn-primary" %>
  </div>
<% end %>


</div>
</div>


