<h1>Listing assignees</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Job title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignees.each do |assignee| %>
      <tr>
        <td><%= assignee.first_name %></td>
        <td><%= assignee.last_name %></td>
        <td><%= assignee.job_title %></td>
        <td><%= link_to 'Show', assignee %></td>
        <td><%= link_to 'Edit', edit_assignee_path(assignee) %></td>
        <td><%= link_to 'Destroy', assignee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignee', new_assignee_path %>
