<div class="container">
  <div class="col-lg-12">
<%= form_for @ticket, html: {class: "form-horizontal center"} do |f| %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :last_name, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :department, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :department, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :title, "Title", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :description, "Description", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_area :description, class: "form-control", rows: "6" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :recipient_company, class: "col-md-4 control-label" %>
      <em>(Enter the public name of the company)</em>
      <div class="col-md-4">
        <%= f.text_field :recipient_company, class: "form-control"%>
      </div>
    </div>
    <div class="text-center actions">
      <%= f.submit class: "btn btn-default btn-primary" %>
    </div>
<%	 end %>
</div>
</div>